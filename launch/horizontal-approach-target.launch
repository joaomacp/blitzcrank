<launch>
    <arg name="gazebo" default="false" />

    <arg name="root_frame" default="world" if="$(arg gazebo)" />
    <arg name="root_frame" default="base_link" unless="$(arg gazebo)" />

    <arg name="arm_name" default="kinova" />

    <remap from="/joint_states" to="/$(arg arm_name)/joint_states" />
    <node pkg="blitzcrank" type="horizontal_approach_target" name="horizontal_approach_target" output="screen">
        <param name="gazebo" value="$(arg gazebo)" />
        <param name="root_frame" value="$(arg root_frame)" />
        <param name="target_frame" value="ar_marker_3" />
    </node>

    <!-- TODO: use the yaml file -->
    <!-- TODO first: measure this in robot -->
    <node pkg="tf" type="static_transform_publisher" name="virtual_tool_broadcaster" args="0 0 -0.12 0 0 0 kinova_end_effector marker0_link 100" />
</launch>
